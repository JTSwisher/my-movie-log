<div class="container">
    <h1 id="all-movies">Your Movies</h1>
    <hr>

    <%if @movies.size == 0%>
        <h2>You do not currently have any movies in your account.</h2>
        <a class="btn btn-primary col-md-3" id ="success-btn" href="/movies/new" role="button">Add Movie</a>
    <%else%>
        <% @movies.each do |movie|%>
        <a href="/movies/<%= movie.id %>"><img src="<%= movie.poster %>" alt="Movie Poster"></a>
        <h2><%= movie.title%></h2><br>
        <a class="btn btn-primary" id ="view-btn" href="/movies/<%= movie.id %>" role="button">View Movie</a>
        <hr>
        <%end%>
    <%end%>

</div>




























