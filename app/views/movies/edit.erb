<div class="container">

    <h1>Edit Movie</h1>
    <hr>
    <img src="<%= @movie.poster %>%" alt="Movie Poster">
    <form action="/movies/<%= @movie.id %>" method="POST">
          <input id="hidden" type="hidden" name="_method" value="patch">

        <div class="form-group col-md-3">
            <input type="text" readonly class="form-control-plaintext" id="title" name="title" value="<%= @movie.title %>"required>
        </div>

        <div class="form-group col-md-3">
            <label for="date">Release Date:</label>
            <input type="date" readonly class="form-control-plaintext" id="date" name="date" value="<%= @movie.date%>" required>
        </div>

        <div class="form-group col-md-3">
            <label for="rating">Rating (1-10):</label>
            <select class="form-control" id="rating" name="rating" value="<%= @movie.rating%>" required>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
            </select>
        </div>

        <div class="form-group col-md-3">
            <label for="comments">Comments:</label>
            <textarea type="text" class="form-control" id="comments" name="comments" rows="3" required><%= @movie.comments%></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a class="btn btn-primary col-md-1" id ="success-btn" href="/account" role="button">Cancel</a>

    </form>

      
    <form action="/movies/<%= @movie.id %>" method="POST">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <button type ="submit" class="btn btn-danger" value="submit">Delete Movie</button>
    </form>
       
</div>