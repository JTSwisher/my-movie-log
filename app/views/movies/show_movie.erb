<div class="container">
       <img src="<%= @movie.poster %>%" alt="Movie Poster Image">
       <h1><%= @movie.title%> </h1>
       <hr>
       <h3> Release Date: <%= @movie.date%> </h3>
       <h3> My Rating: <%= @movie.rating%> </h3>
       <h3> Comments: <%= @movie.comments%> </h3>
       
    
<a class="btn btn-primary" id ="view-btn" href="/movies/<%= @movie.id %>/edit" role="button">Edit Movie</a>


</div>
